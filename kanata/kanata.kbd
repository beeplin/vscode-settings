  ;; y (chord luy y)
  ;; n (chord nei n)
  ;; e (chord nei e)
  ;; i (chord nei i)
  ;; h (chord h,. h)
  ;; , (chord h,. ,)
  ;; . (chord h,. .)
)

(deftemplate shift-fork (original modified)
  (fork (macro $original nop0) (macro $modified nop0) (lsft rsft))
)

